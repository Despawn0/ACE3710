	.ifndef test_s
	.define test_s

	.macro jl rTrash, lbl
	lui rTrash, >lbl
	ori rTrash, <lbl
	juc rTrash
	.endmacro

	.macro sw rSrc, rTrash, lbl
	lui rTrash, >lbl
	ori rTrash, <lbl
	stor rSrc, rTrash
	.endmacro
	
	.segment "CODE"

	.pushseg
	.segment "BSS"
b:	.res 1
	.popseg
add:
	lui r0, 0
	addi r0, 1
	sw r0, r1, b
a:	
@loop:
	jl r1, @loop	;that is all folks
	
	.endif
